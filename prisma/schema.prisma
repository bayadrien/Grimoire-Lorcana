generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String       @id
  name        String
  collections Collection[]
}

model Card {
  id        String   @id
  name      String
  setName   String
  setCode   String?
  ink       String?
  rarity    String?
  type      String?
  cost      Int?
  strength  Int?
  willpower Int?
  lore      Int?
  text      String?
  trades    Trade[]
  imageUrl  String?
  updatedAt DateTime @updatedAt

  collections Collection[]
}

model Collection {
  userId   String
  cardId   String
  variant  String   // "normal" | "foil"
  quantity Int

  user User @relation(fields: [userId], references: [id])
  card Card @relation(fields: [cardId], references: [id])

  @@unique([userId, cardId, variant])
}

model Trade {
  id        String   @id @default(cuid())
  fromUser  String
  toUser    String
  cardId    String
  quantity  Int      @default(1)
  createdAt DateTime @default(now())

  card Card @relation(fields: [cardId], references: [id])

  @@index([fromUser, toUser])
  @@index([cardId])
  @@index([createdAt])
}
